{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "outDir": "build",

    "noImplicitAny": false,
    "noUnusedLocals": true,
    "strictNullChecks": true,

    "removeComments": false,
    "allowJs": true
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
